<!DOCTYPE html>
<html>
<head>
<title>Clients</title>
<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
<%= favicon_link_tag "notepad.ico" %>
</head>
<body>
<div class="navbar navbar-fixed-top frame-bar history-block">
  <div class="navbar-inner">
    <div class="nav-collapse collapse">
      <ul class="nav">
        <li> <%= link_to image_tag("close.png"), "#", :id => "close-frame", :style => "width:18px;" %> </li>
        <li class="<%= history_active("contacts") %>" ><%= link_to "Контакты", client_path(@client, :history_action => "contacts"), :class => "iframe-link" %></li>
        <li class="<%= history_active("stories") %>"> <%= link_to "История", client_stories_path(@client, :history_action => "stories"), :class => "iframe-link" %></li>
        <li class="<%= history_active("show_contact") %>"><%= link_to client_description, edit_client_path(@client, :history_action => "show_contact"), :class => "iframe-link frame-client" %></li>
      </ul>
    </div>
  </div>
</div>

<div style="position:relative; top: 50px;">
  <%= yield %>
</div>

</body>
</html>
