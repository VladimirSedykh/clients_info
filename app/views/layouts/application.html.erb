<!DOCTYPE html>
<html>
<head>
  <title>ClientsInfo</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
  <div class="navbar-inner">
    <%= link_to current_group_name, root_path, :class => "brand"  %>
    <div class="nav-collapse collapse">
      <ul class="nav">
        <li class="divider-vertical"></li>
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Категории<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% unless current_group == "client" %>
            <li><%= link_to "Клиенты", change_group_clients_path(:group => "client") %></li>
          <% end %>
          <% unless current_group == "provider" %>
            <li><%= link_to "Поставщики", change_group_clients_path(:group => "provider") %></li>
          <% end %>
          <% unless current_group == "partner" %>
            <li><%= link_to "Партнеры", change_group_clients_path(:group => "partner") %></li>
          <% end %>
        </ul>
        </li>
        <li><%= link_to "Настройки", settings_path %></li>
      </ul>
    </div>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-warning">
  <a class="close" href="#">&times;</a>
  <%= flash[:notice] %>
</div>
</div>
<% end %>


<%= yield %>

</body>
</html>
