<%= form_for @activity, :html => {:class => "form-horizontal"} do |f| %>
  <% if @activity.errors.any? %>
    <div id="error_explanation">
      <% @activity.errors.full_messages.each do |msg| %>
        <p class='text-error margined'><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="pull-left">
  <div class="control-group">
    <%= f.label "Имя:", :class => "control-label", :for => "inputName" %>
    <div class="controls">
      <%= f.text_area :name, :rows => 2, :id => "inputName" %>
    </div>
  </div>
  </div>

<div class="control-group unfloated">
  <div class="controls">
    <%= f.submit %>
  </div>
</div>
<% end %>

