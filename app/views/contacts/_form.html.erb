<div id="search_form">

  <% if @contact && @contact.errors.any? %>
    <div id="error_explanation">
      <% @contact.errors.full_messages.each do |msg| %>
        <p class='text-error margined'><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="pull-left form-horizontal">
    <%= form_for [@client, @contact || Contact.new], :html => {:class => "form-horizontal"} do |c| %>
      <div class="pull-left">
      <div class="control-group">
        <%= c.label "Name:", :class => "control-label", :for => "inputName" %>
        <div class="controls">
          <%= c.text_area :name, :rows => 2, :id => "inputName" %>
        </div>
      </div>
      <div class="control-group">
        <%= c.label "CellPhone:", :class => "control-label", :for => "inputPhone" %>
        <div class="controls">
          <%= c.text_field :cellphone, :id => "inputPhone", :class => "phone" %>
        </div>
      </div>
      <div class="control-group">
        <%= c.label "Phone:", :class => "control-label", :for => "inputPhone" %>
        <div class="controls">
          <%= c.text_field :phone, :id => "inputPhone", :class => "phone" %>
        </div>
      </div>
      <div class="control-group">
        <%= c.label "Email:", :class => "control-label", :for => "inputEmail" %>
        <div class="controls">
          <%= c.text_field :email, :id => "inputEmail" %>
        </div>
      </div>
      <div class="control-group">
        <%= c.label "ICQ:", :class => "control-label", :for => "inputIcq" %>
        <div class="controls">
          <%= c.text_field :icq, :id => "inputIcq" %>
        </div>
      </div>
      <div class="control-group">
        <%= c.label "Skype:", :class => "control-label", :for => "inputSkype" %>
        <div class="controls">
          <%= c.text_field :skype, :id => "inputSkype" %>
        </div>
      </div>
    </div>
    <div class="control-group unfloated">
      <div class="controls">
        <%= c.submit :class => "btn btn-primary"%>
      </div>
    </div>
  <% end %>
  </div>
</div>
<%= link_to "Назад", client_path(@client, :history_action => "contacts"), :class => "iframe-link" %>
