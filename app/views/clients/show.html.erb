<%= "Описание: #{@client.description}" %>
<br />
<%= link_to "Создать Контакт", new_client_contact_path(@client), :class => "btn ajax-link pull-left" %>
<table class="table table-striped table-condensed table-bordered">
  <tr class="text-info">
    <td><strong>Имя</strong></td>
    <td><strong>Моб. телефон</strong></td>
    <td><strong>Телефон</strong></td>
    <td><strong>Email</strong></td>
    <td><strong>ICQ</strong></td>
    <td><strong>Skype</strong></td>
    <td></td>
  </tr>
  <%= render @client.contacts.reverse %>
</table>

<div id="create_contact" class="modal hide fade">
  <h3>Создать Контакт:</h3>
  <div class="modal-body">
    <% @contact.errors.full_messages.each do |error| %>
      <p><%= error %></p>
  <% end %>
    <%= render :partial => "contacts/form" %>
  </div>
</div>
