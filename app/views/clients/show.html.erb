<%= link_to "Close", "#", :id => "close-frame", :onclick => "top.window.document.getElementById('main-frameset').rows = '100%'" %>
<div class="margined">
  <h2><%= @client.name %></h2>
  <p> Адрес: <%= @client.address %> </p>
  <p> Область: <%= @client.state %> </p>
  <p> Вид Деятельности: <%= @client.activity %> </p>
  <p> Описание: <%= @client.description%> </p>
  <p> Дата создания: <%= @client.created_at.strftime("%m/%d/%Y %H:%M:%S")%> </p>
  <p> Дата последнего редактирования: <%= @client.updated_at.strftime("%m/%d/%Y %H:%M:%S")%> </p>
  <%= link_to "Редактировать", edit_client_path(@client), :class => "btn" %>
</div>

<h3 class="margined">Contacts:</h3>
<table class="table table-striped table-condensed table-bordered">
  <tr class="text-info">
    <td><strong>Имя</strong></td>
    <td><strong>Моб. телефон</strong></td>
    <td><strong>Телефон</strong></td>
    <td><strong>Email</strong></td>
    <td><strong>ICQ</strong></td>
    <td><strong>Skype</strong></td>
    <td></td>
  </tr>
  <%= render @client.contacts.reverse %>
</table>

<a href="#create_contact" role="button" class="btn btn-primary btn-large margined" data-toggle="modal">Создать Контакт</a>

<div id="create_contact" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Создать Контакт:</h3>
  </div>
  <div class="modal-body">
    <% @contact.errors.full_messages.each do |error| %>
      <p><%= error %></p>
  <% end %>
    <%= render :partial => "contacts/form" %>
  </div>
</div>
