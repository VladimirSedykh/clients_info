<%= render "search_form" %>

<div class="pagination">
  <%= will_paginate @clients %>
</div>
<table class="table table-striped table-condensed table-bordered">
  <thead class="text-info">
    <th><strong><%= link_to "Название", clients_path(:field => "name", :direction => order_direction("name")), :class => "ajax-link" %><%=raw order_mark("name")%></strong></th>
    <th><strong>Контакты </strong></th>
    <th><strong><%= link_to "Область", clients_path(:field => "state", :direction => order_direction("state")), :class => "ajax-link" %><%=raw order_mark("state")%></strong></th>
    <th><strong><%= link_to "Адрес", clients_path(:field => "address", :direction => order_direction("address")), :class => "ajax-link" %><%=raw order_mark("address")%></strong></th>
    <th><strong><%= link_to "Вид деятельности", clients_path(:field => "activity", :direction => order_direction("activity")), :class => "ajax-link" %><%=raw order_mark("activity")%></strong></th>
    <th><strong><%= link_to "Дата создания", clients_path(:field => "created_at", :direction => order_direction("created_at")), :class => "ajax-link" %><%=raw order_mark("created_at")%></strong></th>
  </thead>
  <%= render @clients %>
</table>
