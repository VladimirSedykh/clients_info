<%= render "search_form" %>
<div id="search_client" class="search-form hidden-form client-new">
  <%= render "form" %>
</div>

<div class="pagination digg_pagination">
  <%= will_paginate @clients %>
</div>
<table class="table table-striped table-condensed table-bordered">
  <thead class="text-info">
    <th><strong><%= link_to "Название", clients_path(:field => "name", :direction => order_direction("name"), :last_action => params[:last_action]), :class => "ajax-link" %><%=raw order_mark("name")%></strong></th>
    <% unless session[:group] %>
      <th><strong><%= link_to "Группа", clients_path(:field => "role", :direction => order_direction("role"), :last_action => params[:last_action]), :class => "ajax-link" %><%=raw order_mark("role")%></strong></th>
    <% end %>
    <th><strong><%= link_to "Контакты", clients_path(:field => "short_contacts", :direction => order_direction("short_contacts"), :last_action => params[:last_action]), :class => "ajax-link" %><%=raw order_mark("short_contacts")%></strong></th>
    <th><strong><%= link_to "Область", clients_path(:field => "state", :direction => order_direction("state"), :last_action => params[:last_action]), :class => "ajax-link" %><%=raw order_mark("state")%></strong></th>
    <th><strong><%= link_to "Адрес", clients_path(:field => "address", :direction => order_direction("address"), :last_action => params[:last_action]), :class => "ajax-link" %><%=raw order_mark("address")%></strong></th>
    <th><strong><%= link_to "Вид деятельности", clients_path(:field => "activity", :direction => order_direction("activity"), :last_action => params[:last_action]), :class => "ajax-link" %><%=raw order_mark("activity")%></strong></th>
    <th><strong><%= link_to "Дата создания", clients_path(:field => "created_at", :direction => order_direction("created_at"), :last_action => params[:last_action]), :class => "ajax-link" %><%=raw order_mark("created_at")%></strong></th>
  </thead>
  <%= render @clients %>
</table>
